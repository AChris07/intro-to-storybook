{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [90]
    },
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  }
}
